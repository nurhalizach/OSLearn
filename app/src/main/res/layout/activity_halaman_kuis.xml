<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".halamanKuis">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#6C60D2">

        <ImageView
            android:id="@+id/keluar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:src="@drawable/kembali"/>

        <TextView
            android:id="@+id/namaKuis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:text="Nama Disini"/>

        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:text="timer disini"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/quizLayout"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/nomorSoal"
            android:layout_width="90dp"
            android:layout_height="25dp"
            app:cardBackgroundColor="#D9D9D9"
            app:cardCornerRadius="5dp">

            <TextView
                android:id="@+id/txtNomorSoal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="3dp"
                android:textSize="15sp"
                android:text="Nomor"/>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/Soal"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/nomorSoal"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="#D9D9D9">

            <TextView
                android:id="@+id/txtSoal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="20sp"
                android:text="soal disini"/>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/pil1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Soal"
            android:padding="10dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#6C60D2"
            android:text="opsi satu"
            android:textSize="16sp"
            android:textAlignment="textStart"/>

        <Button
            android:id="@+id/pil2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pil1"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:text="opsi dua"
            android:textSize="16sp"
            android:textAlignment="textStart"
            android:backgroundTint="#6C60D2"/>

        <Button
            android:id="@+id/pil3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pil2"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:text="opsi tiga"
            android:textSize="16sp"
            android:textAlignment="textStart"
            android:backgroundTint="#6C60D2"/>


        <Button
            android:id="@+id/pil4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pil3"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:text="opsi empat"
            android:textSize="16sp"
            android:textAlignment="textStart"
            android:backgroundTint="#6C60D2"/>

    </RelativeLayout>

    <Button
        android:id="@+id/next"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginRight="35dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/quizLayout"
        android:text="Next"
        android:textSize="16sp"
        android:backgroundTint="#41A600"/>

    <Button
        android:id="@+id/back"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="35dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/quizLayout"
        android:text="back"
        android:textSize="16sp"
        android:backgroundTint="#41A600"/>



</RelativeLayout>