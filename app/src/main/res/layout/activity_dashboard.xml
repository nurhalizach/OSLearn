<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_page">

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="393dp"
        android:layout_height="320dp"
        app:srcCompat="@drawable/top_background" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="28dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/logo_osl" />
    <ImageView
        android:id="@+id/logout"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/power"/>

    <TextView
        android:id="@+id/user_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imageView13"
        android:layout_marginTop="10dp"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:text="USERNAME" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_menu"
        android:layout_width="312dp"
        android:layout_height="145dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/user_details"
        app:cardCornerRadius="25dp"
        app:cardBackgroundColor="@color/white"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:layout_marginRight="200dp"
                android:src="@drawable/menu_item_orange"
                android:layout_gravity="center"/>

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:src="@drawable/menu_item_green" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:layout_marginRight="200dp"
                android:src="@drawable/menu_item_orange"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/btn_materi"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="20dp"
                android:src="@drawable/materi"
                android:layout_gravity="center"/>


            <ImageView
                android:id="@+id/btn_kuis"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/kuis"
                android:layout_margin="20dp"
                android:layout_gravity="center"/>

            <ImageView
                android:id="@+id/btn_skor"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/skor"
                android:layout_margin="20dp"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="110dp">

            <TextView
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textAlignment="center"
                android:textSize="18sp"
                android:text="Materi"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textAlignment="center"
                android:textSize="18sp"
                android:text="Kuis"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textAlignment="center"
                android:textSize="18sp"
                android:text="Skor"
                android:textStyle="bold"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>